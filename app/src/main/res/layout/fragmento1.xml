<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmento1">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="751dp"
        android:layout_height="130dp"
        android:layout_marginBottom="468dp"
        android:text="EVOLUCION DE GIT"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="80dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crdCave"
        android:layout_width="380dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ORIGEN DE GIT"
            android:textSize="40dp"
            android:textAlignment="center"
            android:background="@color/purple_500"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_marginTop="67dp"
            android:src="@mipmap/ic_bitkeeper"></ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdMedieval"
        android:layout_width="380dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:text="NACE  GIT"
            android:textAlignment="center"
            android:textSize="40dp"></TextView>

        <ImageView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="50dp"
            android:src="@mipmap/ic_git"></ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdIlustrado"
        android:layout_width="380dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GIT HUB"
            android:textSize="40dp"
            android:textAlignment="center"
            android:background="@color/purple_500"></TextView>

        <ImageView
            android:layout_marginTop="52dp"
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_github"></ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdModerno"
        android:layout_width="380dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTROS REPO"
            android:textSize="40dp"
            android:textAlignment="center"
            android:background="@color/purple_500"></TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="52dp"
            android:src="@mipmap/ic_gitlab">

        </ImageView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>